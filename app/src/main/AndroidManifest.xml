<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beatrizgomes.beaconlocation" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="kontakt.io.API_KEY"
            android:value="KEY" />

        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.BeaconsScanActivity"
            android:label="@string/title_activity_beacons_scan" >
        </activity>
        <activity
            android:name=".ui.activity.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name=".ui.activity.IBeaconDetailsActivity"
            android:label="@string/title_activity_beacon_details" />

        <service
            android:name="com.kontakt.sdk.android.ble.service.ProximityService"
            android:exported="false" />

        <activity
            android:name=".ui.activity.EddystoneDetailsActivity"
            android:label="@string/title_activity_eddystone_details"
            android:parentActivityName=".ui.activity.BeaconsScanActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.beatrizgomes.beaconlocation.ui.activity.BeaconsScanActivity" />
        </activity>
    </application>

</manifest>
